<h2>Log in</h2>
  <div class="panel-content">
    <div class="lgn-wrp grysh">
      <div class="bg-img" style="background-image: url(<%= asset_path 'resource/bg-img1.png' %>);"></div>
      <div class="lgn-innr">
        <div class="widget lgn-frm">
          <div class="frm-tl">
            <%= link_to root_path do %>
              <img src="<%= asset_path 'logo1.png' %>" alt="" %>
            <% end %>
          </div>
          <div class="frm-tl">
            <h3>로그인</h3>
            <span>Fill your detail to get in</span>
          </div>
            <%= form_tag(user_session_path(@user)) do %>
            <div class="row mrg10">
              <div class="col-md-12 col-sm-12 col-lg-12">
                <%= text_field_tag "user[email]", @user.email, class: "brd-rd5", placeholder: "이메일을 입력해주세요" %>
              </div>
              <div class="col-md-12 col-sm-12 col-lg-12">
                <%= password_field_tag "user[password]", @user.password, class: "brd-rd5", placeholder: "비밀번호를 입력해주세요" %>
              </div>
              <div class="col-md-12 col-sm-12 col-lg-12">
                <span class="chbx">
                  <input type="checkbox" id="chk1" />
                  <label for="chk1">Remember Me</label>
                </span>
              </div>
              <div class="col-md-12 col-sm-12 col-lg-12">
                <%= button_tag "로그인하기", class: "btn btn-primary brd-rd5" %>
              </div>
              <div class="col-md-12 col-sm-12 col-lg-12">
                <a href="#" title="" class="frgt">Forget password?</a>
              </div>
              <div class="col-md-12 col-sm-12 col-lg-12">
                <%= link_to users_auth_kakao_path, {style: 'background-color:#fcd411; color:#000000', class: "btn btn-block btn-social btn-openid"} do %>
                  <span class="d-flex align-items-center" style="padding-left:4px;">
                    <i class="fa fa-comment" style="color:#000000"></i>
                  </span>
                  Sign in with Kakao
                
                <% end %>
                
                
                
                <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-block btn-social btn-google" do %>
                  <span class="fa fa-google d-flex align-items-center" style="padding-left:5px;">
                  </span>
                  Sign in with Google
                <% end %>
                
                <%= link_to users_auth_naver_path, {style: 'backgroud-color:#00c73c', class: "btn btn-block btn-social btn-vimeo"} do %>
                  <span style="backgroud-color:#00c73c">
                    <img src="<%= asset_path 'resource/naver_login_icon.png' %>" style="width: 32px; height: 43px;">
                    
                  </span>
                  Sign in with Naver
                  
                <% end %>
                
                <%= link_to new_user_registration_path(@user), class: "text-center btn btn-block btn-social btn-yahoo" do %>
                  
                  
                  ♥Sign up
                <% end %>
                
              </div>
            </div>
              
            <% end %>
